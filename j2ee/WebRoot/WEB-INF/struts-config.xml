<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans >
    <form-bean name="customerTypeForm" type="com.yinpsoft.struts.form.CustomerTypeForm" />
    <form-bean name="customerForm" type="com.yinpsoft.struts.form.CustomerForm" />
    <!--
    <form-bean name="customerTypeViewForm" type="com.yinpsoft.struts.form.CustomerTypeViewForm" />
    <form-bean name="customerTypeListForm" type="com.yinpsoft.struts.form.CustomerTypeListForm" /> 
    -->

  </form-beans>

  <global-exceptions />
  <global-forwards >
    <forward
      name="success"
      path="/views/common/success.jsp"
      redirect="true" />
    <forward
      name="error"
      path="/views/common/error.jsp"
      redirect="true" />
    <forward
      name="customerTypePage"
      path="/views/customers/customerTypeNew.jsp"
      redirect="true" />

  </global-forwards>

  <action-mappings >
    <action
      attribute="customerTypeForm"
      input="/views/customers/customerTypeNew.jsp"
      name="customerTypeForm"
      parameter="action"
      path="/customerType"
      scope="request"
      type="com.yinpsoft.struts.action.CustomerTypeAction">
      <forward name="customerTypeView" path="/views/customers/customerTypeView.jsp" />
      <forward name="customerTypeEdit" path="/views/customers/customerTypeEdit.jsp" />
      <forward name="customerTypeList" path="/views/customers/customerTypeList.jsp" />
      <forward name="customerTypeNew" path="/views/customers/customerTypeEdit.jsp" />
    </action>
      
    <action
      attribute="customerTypeForm"
      input="/views/customers/customerTypeView.jsp"
      name="customerTypeForm"
      parameter="action"
      path="/customerTypeView"
      scope="request"
      type="com.yinpsoft.struts.action.CustomerTypeAction"
      validate="false">
      <forward name="customerTypeView" path="/views/customers/customerTypeView.jsp" />
      <forward name="customerTypeEdit" path="/views/customers/customerTypeEdit.jsp" />
      <forward name="customerTypeNew" path="/views/customers/customerTypeEdit.jsp" />
      <forward name="customerTypeList" path="/views/customers/customerTypeList.jsp" />
    </action>
      
    <action
      attribute="customerTypeForm"
      input="/views/customers/customerTypeList.jsp"
      name="customerTypeForm"
      parameter="action"
      path="/customerTypeList"
      scope="request"
      type="com.yinpsoft.struts.action.CustomerTypeAction"
      validate="false">
      <forward name="customerTypeEdit" path="/views/customers/customerTypeEdit.jsp" />
      <forward name="customerTypeList" path="/views/customers/customerTypeList.jsp" />
    </action>
    <action
      attribute="customerTypeForm"
      input="/views/customers/customerTypeEdit.jsp"
      name="customerTypeForm"
      parameter="action"
      path="/customerTypeEdit"
      scope="request"
      type="com.yinpsoft.struts.action.CustomerTypeAction">
      <forward name="customerTypeEdit" path="/views/customers/customerTypeEdit.jsp" />
    </action>
    
    <action
      attribute="customerForm"
      input="/views/customers/customerEdit.jsp"
      name="customerForm"
      parameter="action"
      path="/customer"
      scope="request"
      type="com.yinpsoft.struts.action.CustomerAction" />

  </action-mappings>
  <message-resources parameter="com.yinpsoft.struts.ApplicationResources" />
  <message-resources parameter="com.yinpsoft.struts.WebSiteResources" />
  
  <!-- <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
  	<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
  </plug-in> -->
</struts-config>

